# http://forums.xonotic.org/showthread.php?tid=5133

# Compile image:
sudo docker build -t local/lighttpd .

# Create container:
sudo docker run -d -it --name xonotic-web -p 80:80/tcp -v xonotic-data:/var/www local/lighttpd

# Connect with root to check/configure lighttpd
sudo docker exec -u 0 -it xonotic-web bash
